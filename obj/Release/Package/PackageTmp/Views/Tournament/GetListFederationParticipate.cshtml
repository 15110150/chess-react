@using ChessResult.Web.Resource
@model ChessResult.Web.Models.TournamentViewModel

<h3 class="title-col">@TournamentResx.FederationParticipate</h3>
<div id="content-data">
    <table class="table table-striped list-progress" id="tbPairt">
        <thead>
            <tr>
                <th>@TournamentResx.No</th>
                <th>@TournamentResx.Federation</th>
                <th>@TournamentResx.FederationFlag</th>
            </tr>
        </thead>
        <tbody>
            @{
                int no = 1;
                foreach (var item in Model.FederationPaticipate)
                {
                    <tr>
                        <td data-request-url='@Url.Action("", "Pairing", new { roundID = 1, tourID = Model.ID, federationID = item.ID})'>@no</td>
                        <td data-request-url='@Url.Action("PairingOfFederation", "Pairing", new { roundID = 1, tourID = Model.ID, federationID = item.ID})'>@item.Name</td>
                        <td data-request-url='@Url.Action("PairingOfFederation", "Pairing", new { roundID = 1, tourID = Model.ID, federationID = item.ID})'><img src="~/Assets/img/@item.Flag" alt="" class="flag"></td>
                    </tr>
                    no += 1;
                }
            }
        </tbody>
    </table>
</div>

<div id="content-data">

</div>